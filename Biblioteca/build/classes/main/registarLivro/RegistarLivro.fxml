<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="livroForm" alignment="CENTER" prefHeight="550.0" prefWidth="800.0" style="-fx-border-color: #6a8d92;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.registarLivro.RegistarLivroController">
   <children>
      <Label text="Registar Livro" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="38.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <VBox prefHeight="245.0" prefWidth="798.0" style="-fx-border-color: #6a8d92;">
         <children>
            <HBox prefHeight="51.0" prefWidth="600.0">
               <children>
                  <Label text="Título" textAlignment="RIGHT" textFill="#060d3f" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Género" textFill="#060d3f" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="280.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="77.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="tituloLivro" prefWidth="35.0" promptText="Ex.: Escola do Amor" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="generoLivro" prefWidth="35.0" promptText="Ex.: 1ª Edição" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="600.0">
               <children>
                  <Label text="ISBN" textAlignment="RIGHT" textFill="#060d3f" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Editora" textFill="#060d3f" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="290.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="77.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="isbnLivro" prefWidth="35.0" promptText="Ex.: 459358" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="editoraLivro" prefWidth="35.0" promptText="Ex.: Companhia das Letras" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="600.0">
               <children>
                  <Label text="Número de Páginas" textAlignment="RIGHT" textFill="#060d3f" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Data de Publicação" textFill="#060d3f" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="150.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="130.0" prefWidth="800.0">
               <children>
                  <TextField fx:id="numeroLivro" prefWidth="35.0" promptText="Ex.: 102" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="dataLivro" prefWidth="35.0" promptText="Ex.: 2018" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="15.0" />
         </VBox.margin>
      </VBox>
      <HBox prefHeight="48.0" prefWidth="800.0">
         <children>
            <Button fx:id="guardarLivro" mnemonicParsing="false" onAction="#btnRegistarLivro" style="-fx-background-color: #060d3f; -fx-border-color: #6a8d92; -fx-border-radius: 2px solid;" text="Guardar" textFill="WHITE" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="313.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
