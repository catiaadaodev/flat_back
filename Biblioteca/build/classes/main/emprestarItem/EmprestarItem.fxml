<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="emprestimoForm" alignment="CENTER" prefHeight="550.0" prefWidth="800.0" style="-fx-border-color: #6a8d92;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.emprestarItem.EmprestarItemController">
   <children>
      <Label text="Emprestar Item" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="38.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <VBox prefHeight="245.0" prefWidth="798.0" style="-fx-border-color: #6a8d92;">
         <children>
            <HBox prefHeight="51.0" prefWidth="600.0">
               <children>
                  <Label text="Item" textAlignment="RIGHT" textFill="#060d3f" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Código do Cliente" textFill="#060d3f" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="230.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="77.0" prefWidth="600.0">
               <children>
                  <RadioButton fx:id="livro" mnemonicParsing="false" onAction="#itemLivro" selected="true" text="Livro" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="item" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="revista" mnemonicParsing="false" text="Revista" toggleGroup="$item" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="cd" mnemonicParsing="false" text="CD" toggleGroup="$item" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="20.0" right="40.0" />
                     </HBox.margin>
                  </RadioButton>
                  <TextField fx:id="clienteEmprestimo" promptText="Ex.: 101" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="600.0">
               <children>
                  <Label text="Código do Livro" textAlignment="RIGHT" textFill="#060d3f" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Data de Devolução" textFill="#060d3f" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="125.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="77.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="livroEmprestimo" prefWidth="50.0" promptText="Ex.: 8" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="dataEmprestimo" promptText="Ex.: 25/11/2023" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="600.0" />
            <HBox prefHeight="130.0" prefWidth="800.0">
               <children>
                  <ComboBox fx:id="listaItem" prefWidth="365.0" promptText="Selecione Item" style="-fx-background-color: white; -fx-border-color: CDCBCB; -fx-border-radius: 2px solid;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="150.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="15.0" />
         </VBox.margin>
      </VBox>
      <HBox prefHeight="48.0" prefWidth="800.0">
         <children>
            <Button mnemonicParsing="false" style="-fx-background-color: #060d3f; -fx-border-color: #6a8d92; -fx-border-radius: 2px solid;" text="Gravar" textFill="WHITE" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="313.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
